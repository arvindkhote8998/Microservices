package com.user.service.service.Impl;

import java.util.List;
import java.util.Optional;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.user.service.dto.Ratings;
import com.user.service.dto.UserDTO;
import com.user.service.entiy.User;
import com.user.service.exception.ResourceNotFoundException;
import com.user.service.external.RatingService;
import com.user.service.mapping.RatingMapping;
import com.user.service.mapping.Usermapping;
import com.user.service.repository.UserRepository;
import com.user.service.servie.UserService;

import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class UserServieImpl implements UserService {

	@Autowired
	UserRepository userRepository;
	
	@Autowired
	RatingService ratingService;
	
	private final Logger logger = LoggerFactory.getLogger(UserService.class);
	
	@Override
	public User create(UserDTO userDTO) {
		logger.info("------- calling create method of UserServieImpl class ---------- ");
		User result = new User();
		try {
			User user = Usermapping.dtoToUser(userDTO);
			Ratings rating = user.getRating();
			Ratings ratings = ratingService.create(RatingMapping.toDTO(rating));
			user.setRating(ratings);
			result = userRepository.save(user);
		} catch (Exception ex) {
			logger.error("Error creating user", ex);
		}
		logger.info("------- ending  create method of UserServieImpl class ---------- ");
		return result;
	}

	@Override
	public User getUser(Integer userId) {
		logger.info("------- calling getUser method of UserServieImpl class ---------- ");
		User user = userRepository.findById(userId)
				.orElseThrow(() -> new ResourceNotFoundException("User not found with given userId"));
		List<Ratings> findByUserId = ratingService.findByUserId(userId);
		logger.info("result will be:" + findByUserId.toString());
		user.setRating(findByUserId);
		return user;
	}

	@Override
	public void deleteUser(Integer userId) {
		logger.info("------- calling deleteUser method of UserServieImpl class ---------- ");
		userRepository.deleteById(userId);
	}

	@Override
	public List<User> getAllUser() {
		logger.info("------- calling getAllUser method of UserServieImpl class ---------- ");
		return userRepository.findAll();
	}

}
